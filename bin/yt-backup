#!/usr/bin/env bash
#
# Download a youtube video and push it to b2
#

cd /tmp || exit

randome=$((RANDOM))

mkdir "media-saving-$randome"
cd "media-saving-$randome" || exit

youtube-dl "$1"

for f in *.mp4; do
	echo "$f"
	tar czf "$f".tar.gz "$f"
	rm "$f"
done

for f in *.mkv; do
	echo "$f"
	tar czf "$f".tar.gz "$f"
	rm "$f"
done

cd ../ || exit

rclone copy --fast-list --progress "/tmp/media-saving-$randome/" "b2:parbs-media/YT/"

rm -rf "media-saving-$randome"
